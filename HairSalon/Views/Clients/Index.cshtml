@using HairSalon.Models

<h1>Clients</h1>

@if (Model.Count == 0)
{
    <h3>No clients have been added.</h3>
}

<ul>
    @foreach (Client client in Model)
    {
        <li>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId }) | @client.Stylist.Name</li>
    }
</ul>

@using (Html.BeginForm("Create", "Clients", FormMethod.Get))
{
    <input type="submit" value="Add a client">
}

@using (Html.BeginForm("Index", "Home", FormMethod.Get))
{
    <input type="submit" value="Home">
}

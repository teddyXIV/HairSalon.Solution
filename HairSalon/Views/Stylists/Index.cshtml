@using HairSalon.Models;

<h1>The Team</h1>

@if (Model.Count == 0)
{
    <h3>No stylists have been hired.</h3>
}

<ul>
    @foreach (Stylist stylist in Model)
    {
        <li>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId })</li>
    }
</ul>

@using (Html.BeginForm("Create", "Stylists", FormMethod.Get))
{
    <input class="button" type="submit" value="Add a stylist">
}

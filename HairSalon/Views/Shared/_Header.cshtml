<div class="header">
    <div class="logo">
        <a href="/">
            <img src="~/images/logo.png" alt="Eau Claire's logo">
        </a>
    </div>
    <div class="title">
        <h1>Eau Claire's</h1>
    </div>

    <div class="search-bar">
        @using (Html.BeginForm("Index", "Search", FormMethod.Get))
        {
            @Html.Label("searchType", "Search for:")
            @Html.RadioButton("searchType", "stylists", true, new { id = "stylistRadio" }) <label for="stylistRadio">Stylists</label>
            @Html.RadioButton("searchType", "client", new { id = "clientRadio" }) <label for="clientRadio">Clients</label>
            @Html.TextBox("searchTerm")

            <input class="button" type="submit" value="Search">
        }
    </div>
</div>